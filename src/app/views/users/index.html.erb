<% provide(:title, "ユーザー一覧") %>
<h1>ユーザー一覧</h1>

<%= will_paginate %>
  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <% if user.image.attached? %>
          <%= image_tag user.display_user_image %>
        <% else %>
          <%= image_tag "default.png" %>
        <% end %>
        <%= link_to user.name, user %>
          <% @user = user %>
        <p><%= render 'follow_form_mini' %></p>
      </li>
      <hr>
    <% end %>
  </ul>
<%= will_paginate %>