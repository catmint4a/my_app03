<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>ホーム</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>ぽすと★いっと！</h1>
    <h2>
      <p>かわいいデザインのポスト投稿サイト</p>
    </h2>

    <%= link_to "会員登録", 'signup', class: "btn btn-lg btn-primary" %>
    <%= link_to "ゲストログイン", homes_guest_sign_in_path, method: :post, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>