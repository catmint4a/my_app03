
<% provide(:title, "パスワードの再設定") %>
<h1>パスワードを再設定します</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: password_resets_path, scope: :password_reset,
                    local: true) do |f| %>
      <%= f.label :email ,"登録メールアドレス"%>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "再設定用のメールを送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>